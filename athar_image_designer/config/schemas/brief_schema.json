{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AtharCreativeBrief",
  "type": "object",
  "required": [
    "theme",
    "mood",
    "palette",
    "keywords",
    "visual_metaphor",
    "arabic_requirements",
    "aspect_ratio_hint"
  ],
  "properties": {
    "theme": { "type": "string", "minLength": 2 },
    "mood": { "type": "string", "minLength": 2 },
    "palette": { "type": "string", "description": "Comma-separated color keywords" },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 8
    },
    "visual_metaphor": { "type": "string" },
    "arabic_requirements": { "type": "string" },
    "references_text": { "type": "boolean", "default": false },
    "excerpt_summary": { "type": "string" },
    "aspect_ratio_hint": { "type": "string", "pattern": "^[0-9]+:[0-9]+$" },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
